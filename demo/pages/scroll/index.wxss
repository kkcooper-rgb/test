.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.scroll-view {
  width: 100%;
  height: 100px;
  border: 1px solid #ccc;
  overflow-x: auto;
}

.scroll-item {
  display: inline-block;
  width: 100vw; /* 每个子项的宽度设置为视口宽度 */
  height: 100px;
  text-align: center;
  line-height: 100px;
  border: 1px solid #ddd;
  box-sizing: border-box;
}
