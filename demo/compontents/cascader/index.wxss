/* components/cascader/cascader.wxss */
.cascader {
  position: relative;
}

.cascader-input {
  border: 1px solid #ddd;
  padding: 10px;
  border-radius: 5px;
  background-color: #fff;
  cursor: pointer;
}

.cascader-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  border: 1px solid #ddd;
  background-color: #fff;
  z-index: 10;
  display: flex;
}

.cascader-column {
  flex: 1;
  border-right: 1px solid #ddd;
  max-height: 200px;
  overflow-y: auto;
}

.cascader-item {
  padding: 10px;
  cursor: pointer;
}

.cascader-item:hover {
  background-color: #f5f5f5;
}

.selected {
  background-color: #e6f7ff;
  color: #1890ff;
}
